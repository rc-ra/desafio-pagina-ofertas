<h1>{{hotel.title}}</h1>
<div class="informacao">
	<span class="localizacao">{{hotel.location}}</span>
	<span class="descricao">{{hotel.description}}</span>
</div>
<div class="imagens">
	{{#each hotel.photos}}
	{{#unless @index}}
	<img class="ativo" src="/{{this}}">
	{{/unless}}
	{{#if @index}}
	<img src="/{{this}}">
	{{/if}}
	{{/each}}
